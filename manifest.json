{
  "manifest_version": 3,
  "name": "選択テキストをChatGPTに尋ねる",
  "version": "1.0",
  "description": "右クリックで選択テキストをChatGPTに送信します。",
  "permissions": ["contextMenus", "storage", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "<all_urls>"
  ],
  "commands": {
    "run-chatgpt": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "選択テキストをChatGPTに送信"
    }
  }
}
